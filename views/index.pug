extends _layout.pug
append head
    link(href='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.css',rel='stylesheet')
    script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/locale/zh-tw.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/gcal.min.js')
    script(src='/js/index.js')
block content
    .ts.container
        .slick
            each item in slide
                a(href=item.link)
                    .ts.embed(class='21:9')
                        img(src=item.img)
                        h3.ts.header.center.aligned=item.header
                            .sub.header=item.description
    .ts.container
        h3.ts.header 最新校園公告
        .ts.stackable.three.cards
            -for(i=0;i<3;i++)
                -let item=posts[i]
                a.ts.card(href=item.link)
                    .content
                        .header=item.title
                    .extra.content
                        .middoted.meta
                            each tag in item.tags
                                span=tag
        br
        a.ts.right.floated.right.labeled.icon.button(href="/tlhc/pages/NDAtMTAwMS0xNS0xLnBocA")
            i.icon.arrow.right
            |查看更多
        br
        br
    .ts.container
        each linkList in links
            h3.ts.header=linkList.name
            .ts.doubling.four.cards
                each item in linkList.table
                    a.ts.card(href=item.link)
                        .content
                            .header=item.header
                            .description=item.description
                        -if(item.icon)
                            .symbol
                                i.icon(class=item.icon)
        h3.ts.header 行事曆
        #calendar