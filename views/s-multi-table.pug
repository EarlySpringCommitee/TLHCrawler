extends _layout.pug
append head
    script(src='/js/score.js')
block content
    include _systemMenu.pug
    .ts.container
        -if(user)
            .ts.stackable.three.cards
                -if(user.id)
                    +card('學號',user.id,'qrcode')
                -if(user.name)
                    +card('姓名',user.name,'user')
                -if(user.class)
                    +card('班級',user.class,'student')
        .ts.message
            .header 小提示
            p 若無法看見完整內容可利用 
                kbd Shift+滾輪
                |  或是手指來移動
        br
        each item in tables
            h3.ts.header=item.title
            .gs.scroll
                table.ts.definition.compact.striped.celled.table.color.first.line(style='display:none',data-table=item.tableID,data-name=item.title)
                    !=item.table
        else
            .ts.header 未找到符合條件的資料
        br