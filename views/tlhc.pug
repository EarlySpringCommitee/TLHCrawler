extends _layout.pug
block content
    .ts.container
        .ts.items
            -let nowDate=''
            each item in tlhc
                -if(nowDate!=item.tags[0]){
                    -nowDate=item.tags[0]
                    .sticky.item
                        .content
                            .header=item.tags[0]
                -}
                a.item(href=item.link)
                    .content
                        .header=item.title
                        .middoted.meta
                            each tag in item.tags
                                span=tag
            else
                .ts.header 未找到符合條件的資料
        br
        #navigator.gs.scroll.non-style
            .ts.primary.buttons
                each page in pages
                    a.ts.button(href=page.link)=page.text